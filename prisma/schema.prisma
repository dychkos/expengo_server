generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  firstName    String
  lastName     String
  password     String
  weekStartDay Int       @default(1)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  categories   Category?
  expenses     Expense?
}

model Category {
  id        Int      @id @default(autoincrement())
  title     String
  iconName  String
  color     String
  limit     Int
  period    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])

  expenses Expense?
}

model Expense {
  id        Int      @id @default(autoincrement())
  title     String
  price     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categoryId Int      @unique
  category   Category @relation(fields: [categoryId], references: [id])

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}
