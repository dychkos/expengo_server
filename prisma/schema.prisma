generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  firstName    String
  lastName     String
  password     String
  weekStartDay Int       @default(1)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  categories   Category[]
  expenses     Expense[]
}

model Category {
  id        String   @id @default(uuid())
  title     String
  iconName  String
  color     String
  limit     Int
  period    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  expenses Expense[]
}

model Expense {
  id        String   @id @default(uuid())
  title     String
  price     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  userId String
  user   User @relation(fields: [userId], references: [id])
}
